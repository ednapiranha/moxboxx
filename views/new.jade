extend layout

block content
  section
    h1 Create a new playlist
    form(method='post', action='/playlist', id='new-playlist')
      label(for='title', class='tip') Title*
      input(type='text', name='title')
      label(for='description', class='tip') Description
      input(type='text', name='description')
      input(type='hidden', name='_csrf', value=csrf)
      button(type='submit') Create
